<h2>Edycja użytkownika</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Hasło" %> <i>(Pozostaw puste w przypadku braku chęci zmiany)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>minimum <%= @minimum_password_length %> znaków</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Potwierdzenie hasła" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Obecne hasło" %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Aktualizuj" %>
  </div>
<% end %>

<h3>Anulowanie konta</h3>

<div>Niezadowolony? <%= button_to "Anuluj konto", registration_path(resource_name), data: { confirm: "Jesteś tego pewny?", turbo_confirm: "Jesteś tego pewny?" }, method: :delete %></div>

<%= link_to "Powrót", :back %>

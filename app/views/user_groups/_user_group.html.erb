<div id="<%= dom_id user_group %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= user_group.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Group:</strong>
    <%= user_group.group_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this user group", user_group, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this user group", edit_user_group_path(user_group), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
